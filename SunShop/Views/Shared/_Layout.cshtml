<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SunShop</title>

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/6e0e0da9de.js"></script>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />

</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                <i class="fas fa-glasses"></i>
                SunShop
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                <div id="navbar-options" class="navbar-nav mx-auto">
                    <a class="nav-item nav-link active" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    <a class="nav-item nav-link" asp-area="" asp-controller="Product" asp-action="Store">Products</a>
                    <a class="nav-item nav-link" asp-area="" asp-controller="Sale" asp-action="Sale">Sale</a>
                    <a class="nav-item nav-link" asp-area="" asp-controller="Inspiration" asp-action="Inspiration">Inspiration</a>
                </div>
                <div class="navbar-nav">
                    <a class="nav-item nav-link" title="Search" asp-area="" asp-controller="Search" asp-action="Search"><i class="fas fa-search"></i></a>
                    <a class="nav-item nav-link" title="Favorites" asp-area="" asp-controller="Favorites" asp-action="Favorites"><i class="fas fa-heart"></i></a>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    @RenderBody()

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)

</body>
</html>

