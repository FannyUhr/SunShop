@{
    ViewData["Title"] = "Home Page";
}

<div id="homepage-images" class="row">
    <div class="column image-hover">
        <img src="~/images/homepage/girl-sunglasses.jpg" alt="">
        <a id="image-btn-one" class="btn image-btn btn-light btn-lg text-black" href="#" role="button">go to sale</a>
    </div>
    <div class="column image-hover">
        <img src="~/images/homepage/group-sunglasses.jpg" alt="">
        <a id="image-btn-two" class="btn image-btn btn-light btn-lg text-black" href="#" role="button">find inspiration</a>
    </div>
</div>

